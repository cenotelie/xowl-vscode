{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "RDF (N-Triples)",
    "scopeName": "source.rdf-nt",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#uris"
        },
        {
            "include": "#langtag"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#keywords"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.percentage",
                    "match": "\\#.*$"
                }
            ]
        },
        "uris": {
            "patterns": [
                {
                    "name": "entity.name.tag",
                    "match": "<[^>]+>"
                },
                {
                    "name": "entity.name.tag",
                    "match": "\\b\\w+:\\w+\\b"
                }
            ]
        },
        "langtag": {
            "patterns": [
                {
                    "name": "constant.numeric",
                    "match": "\\@[a-zA-Z]+(\\-[a-zA-Z0-9]+)*"
                }
            ]
        },
        "strings": {
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.xowl",
                    "match": "\\\\."
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name":"keyword.control",
                    "match": "\\b([Pp][Rr][Ee][Ff][Ii][Xx]|[Bb][Aa])\\b"
                }
            ]
        }
    }
}