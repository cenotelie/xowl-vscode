{
    "name": "vscode-xowl-languages",
    "displayName": "xOWL Languages Support",
    "description": "Language support for the RDF, OWL and xOWL languages",
    "icon": "xowl.png",
    "version": "0.0.1",
    "publisher": "cenotelie",
    "repository": {
        "type": "mercurial",
        "url": "https://bitbucket.org/xowl/xowl-vscode"
    },
    "license": "LGPL-3.0+",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Languages"
    ],
    "keywords": [
        "language",
        "rdf",
        "owl",
        "xowl",
        "semantic"
    ],
    "activationEvents": [
        "onLanguage:xowl-rdf-nt"
    ],
    "main": "./target/src/Main",
    "files": [],
    "contributes": {
        "languages": [
            {
                "id": "xowl-rdf-nt",
                "aliases": [
                    "RDF (N-Triples)"
                ],
                "extensions": [
                    ".nt"
                ],
                "configuration": "./languages/rdf-nt-language-configuration.json"
            },
            {
                "id": "xowl-rdf-nq",
                "aliases": [
                    "RDF (N-Quads)"
                ],
                "extensions": [
                    ".nq"
                ],
                "configuration": "./languages/rdf-nq-language-configuration.json"
            },
            {
                "id": "xowl-rdf-ttl",
                "aliases": [
                    "RDF (Turtle)"
                ],
                "extensions": [
                    ".ttl"
                ],
                "configuration": "./languages/rdf-ttl-language-configuration.json"
            },
            {
                "id": "xowl-rdf-trig",
                "aliases": [
                    "RDF (TriG)"
                ],
                "extensions": [
                    ".trig"
                ],
                "configuration": "./languages/rdf-trig-language-configuration.json"
            },
            {
                "id": "xowl-rdf-xml",
                "aliases": [
                    "RDF (XML)"
                ],
                "extensions": [
                    ".rdf"
                ],
                "configuration": "./languages/rdf-xml-language-configuration.json"
            },
            {
                "id": "xowl-xrdf",
                "aliases": [
                    "xRDF"
                ],
                "extensions": [
                    ".xrdf"
                ],
                "configuration": "./languages/xrdf-language-configuration.json"
            },
            {
                "id": "xowl-owl-fs",
                "aliases": [
                    "OWL (Functional)"
                ],
                "extensions": [
                    ".ofn",
                    ".fs"
                ],
                "configuration": "./languages/owl-fs-language-configuration.json"
            },
            {
                "id": "xowl-owl-xml",
                "aliases": [
                    "OWL (XML)"
                ],
                "extensions": [
                    ".owx",
                    ".owl"
                ],
                "configuration": "./languages/owl-xml-language-configuration.json"
            },
            {
                "id": "xowl-xowl",
                "aliases": [
                    "xOWL"
                ],
                "extensions": [
                    ".xowl"
                ],
                "configuration": "./languages/xowl-language-configuration.json"
            },
            {
                "id": "xowl-sparql",
                "aliases": [
                    "SPARQL"
                ],
                "extensions": [
                    ".sparql"
                ],
                "configuration": "./languages/sparql-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "xowl-rdf-nt",
                "scopeName": "source.xowl-rdf-nt",
                "path": "./languages/rdf-nt.tmLanguage.json"
            }
        ],
        "iconThemes": [
            {
                "id":"xowl-icons",
                "label": "xOWL Icons",
                "path": "./icons/xowl-icon-theme.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "vscode-languageclient": "3.3.0"
    },
    "devDependencies": {
        "typescript": "2.4.2",
        "vscode": "1.1.4",
        "@types/node": "^6.0.40",
        "@types/es6-promise": "^0.0.32"
    }
}